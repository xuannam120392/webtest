@model BIDVSmartContent.Models.Menu.MenuViewModel
<nav class="navbar navbar-fixed-top navbar-slide">
    <div class="container">
        <div class="row">
            <a href="@Url.Action("Index", "Index")" class="navbar-brand goto">
                <img src="@Url.Content("~/Content/Frontend/images/logo_nav.png")" alt="BIDV" width="151" height="63" />
            </a>
            <button class="navbar-toggle menu-collapse-btn collapsed" data-toggle="collapse" data-target=".navMenuCollapse">
                <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
            </button>            
            <div class="collapse navbar-collapse navMenuCollapse">
                <ul class="nav">
                    @{
                        var i = 0;
                        var link = "";
                        foreach (var item in Model.ListMenu)
                        {
                            if (i == 0)
                            {
                                <li class="active">
                                    <a href='@((Request.Url != null && Request.Url.AbsolutePath.Split('/').Count() == 2 &&  !String.IsNullOrEmpty(Request.Url.AbsolutePath.Split('/')[1]))
                                                && !Request.Url.AbsolutePath.Split('/')[1].Contains("index")
                           ? "/index/" + "#" + item.MenuLink : "#" + item.MenuLink)' class="navbar-brand goto">@item.MenuTitle</a>
                                </li> 
                            }
                            else
                            {
                                <li><a href="@((Request.Url != null && Request.Url.AbsolutePath.Split('/').Count() == 2 && !String.IsNullOrEmpty(Request.Url.AbsolutePath.Split('/')[1]))
                                            && !Request.Url.AbsolutePath.Split('/')[1].Contains("index")
                            ? "/index/" + "#" + item.MenuLink : "#" + item.MenuLink)" class="navbar-brand goto">@item.MenuTitle</a></li>
                            }
                            i = i + 1;
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</nav>