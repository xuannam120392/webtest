@model BIDVSmartContent.Models.UserModel.UserLoginViewModel

@{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="navbar-buttons navbar-header pull-right" role="navigation">
            <ul class="nav ace-nav">
                <li class="light-blue">
                    <a data-toggle="dropdown" href="#" class="dropdown-toggle"><i class="default-icon fa fa-user"></i><span class="user-info">@Model.UserName</span><i class="default-icon fa fa-caret-down"></i></a>
                    <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                        @*<li><a href=""><i class="default-icon fa fa-user"></i>Profile</a></li>*@
                        <li><a href="@Url.Action("ChangePassword", "Account", new { id = Model.UserId })"><i class="default-icon fa fa-lock"></i>Change password</a></li>
                        <li class="divider"></li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="default-icon fa fa-power-off"></i>Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    }
}
